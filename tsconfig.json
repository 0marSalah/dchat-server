{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "typeRoots": ["src/types", "./node_modules/@types"],
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@dao/*": ["src/dao/*"],
      "@routes/*": ["src/routes/*"],
      "@prisma/*": ["src/prisma/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
